{
    "compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"removeComments": false,
		"outDir": "dist",
		"baseUrl": "./",
		"declaration": true,
		"paths": {
			"~/*": ["./src/*"],
			"models/*": ["./src/generated/models/*"],
			"client/*": ["./src/generated/client/*"],
			"shared/*": ["./src/generated/shared/*"]
		}
	},
    "include": ["./src/**/*"]
}
